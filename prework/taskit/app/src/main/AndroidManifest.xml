<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.taskit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/taskicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.codepath.taskit.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.codepath.taskit.activities.MainActivity" />
        <activity android:name="com.codepath.taskit.activities.EditItemActivity" />
        <activity android:name="com.codepath.taskit.activities.NewTaskActivity" />

    </application>

</manifest>